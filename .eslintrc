{
  "env": {
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "overrides": [
    {
      "files": [
        "main.js"
      ],
      "rules": {
        "global-require": "off"
      }
    },
    {
      "files": [
        "lib/rules/**/index.js"
      ],
      "rules": {
        "consistent-return": "off",
        "default-case": "off",
        "default-param-last": "off",
        "no-continue": "off",
        "no-nested-ternary": "off",
        "no-param-reassign": "off",
        "no-plusplus": "off",
        "no-restricted-syntax": "off",
        "no-use-before-define": [
          "error",
          {
            "functions": false
          }
        ],
        "prefer-const": [
          "error",
          {
            "destructuring": "all"
          }
        ]
      }
    },
    {
      "env": {
        "jest/globals": true
      },
      "files": [
        "**/tests/*.js"
      ],
      "globals": {
        "testRule": true
      },
      "plugins": [
        "jest"
      ],
      "rules": {
        "import/no-extraneous-dependencies": "off",
        "max-len": [
          "error",
          300
        ],
        "no-useless-concat": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "extraFileExtensions": [
      ".json"
    ],
    "sourceType": "module"
  },
  "rules": {
    "max-len": [
      "error",
      180
    ],
    "object-curly-newline": [
      "error",
      {
        "consistent": true,
        "minProperties": 9,
        "multiline": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "quote-props": [
      "error",
      "consistent-as-needed"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ]
  }
}
